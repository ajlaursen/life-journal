<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Entry:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Entry name:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-desc">description:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  
    <h3>Current entries:</h3>
<div>
    {{#each entries as |entry |}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{entry.id}}">{{entry.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{entry .id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  
</div>

<script src="../public/js/profile.js"></script>
